<section id="facility-owner-training-ground__show">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Mobile Number</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @player.name %></td>
        <td><%= @player.mobile_number %></td>
      </tr>
    </tbody>
  </table>

  <div class="mt-3">
    <%= link_to 'Edit', edit_facility_owner_player_path(@player), class: 'btn btn-primary me-2' %>
    <%= link_to 'Back', facility_owner_players_path, class: 'btn btn-secondary' %>
  </div>
</section>
