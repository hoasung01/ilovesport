<div class="container">
  <h1 class="text-center mt-4">Admin Dashboard</h1>
  <p class="text-center">Welcome, <%= current_admin.email %>!</p>
  <% if admin_signed_in? %>
    <%= button_to "Sign Out", destroy_admin_session_path, method: :delete %>
  <% end %>

  <div class="row mt-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Manage Teams</h5>
          <p class="card-text">Create, edit, and delete teams.</p>
          <%= link_to "Teams", admin_teams_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Manage Players</h5>
          <p class="card-text">Add, edit, and remove players.</p>
          <%= link_to "Players", admin_players_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
