<section id="admin-sport__index">
  <div class="row">
    <div class="col">
      <h1 class="display-4">Sports</h1>
    </div>
    <div class="col-auto">
      <%= link_to 'New Sport', new_admin_sport_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @sports.each do |sport| %>
          <tr>
            <td><%= sport.name %></td>
            <td class="text-center">
              <%= link_to 'Show', admin_sport_path(sport), class: 'btn btn-sm btn-info' %>
              <%= link_to 'Edit', edit_admin_sport_path(sport), class: 'btn btn-sm btn-warning' %>
              <%= button_to 'Destroy', admin_sport_path(sport),
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
